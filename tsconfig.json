{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "bundler"
  },
  "include": ["src", "__tests__"],
  "exclude": ["node_modules", "dist"]
}
